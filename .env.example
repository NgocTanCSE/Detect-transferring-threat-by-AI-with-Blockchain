# ==========================================
# Blockchain AI Security - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!
# ==========================================

# ==========================================
# Alchemy API Configuration
# Get your API key from: https://www.alchemy.com/
# ==========================================
ALCHEMY_API_KEY=your_alchemy_api_key_here

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://user:password@db:5432/blockchain_db

# PostgreSQL credentials
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=blockchain_db

# ==========================================
# Demo/Testing Configuration
# ==========================================
# Demo wallet address for testing (optional)
DEMO_FUNDED_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb
DEMO_INITIAL_BALANCE_ETH=1000

# ==========================================
# Frontend Configuration
# ==========================================
# Public API URL (accessible from browser)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend URL (used in Docker network)
BACKEND_URL=http://backend:8000

# Demo sender address for frontend
NEXT_PUBLIC_SENDER_ADDRESS=0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb

# ==========================================
# Security Configuration (Optional)
# ==========================================
# JWT secret for authentication (if implementing auth)
# JWT_SECRET=your_jwt_secret_here

# API rate limiting
# RATE_LIMIT_PER_MINUTE=60

# ==========================================
# Production Settings (Optional)
# ==========================================
# NODE_ENV=production
# NEXT_TELEMETRY_DISABLED=1
